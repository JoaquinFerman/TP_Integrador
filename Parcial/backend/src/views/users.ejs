<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gesti√≥n de usuarios</title>
  <link rel="stylesheet" href="http://localhost:3000/Public/styles/styles-ejs-usuarios.css">
  <link rel="stylesheet" href="http://localhost:3000/Public/styles/styles-ejs.css">
</head>
<body>
  <%- include("partials/navbar") %>

  <main class="container mt-4">
    <h2>Agregar nuevo usuario</h2>
    <form class="auto-form" data-action="/api/usuarios" data-method="POST">
      <input type="text" name="name" placeholder="Nombre del usuario" required>
      <input type="text" name="password" placeholder="Password" required>
      <button type="submit">Agregar</button>
    </form>

    <hr>

    <h2>Lista de usuarios</h2>
    <div class="users-list">
      <% users.forEach(user => { %>
        <div class="product-card">
          <h3>Nombre: <%= user.name %></h3>
          <form class="auto-form" data-action="/api/usuarios/<%= user.id %>" data-method="PUT">
            <input type="text" name="name" value="<%= user.name %>" required>
            <button type="submit">Actualizar</button>
          </form>
          
          <form class="auto-form" data-action="/api/usuarios/<%= user.id %>" data-method="DELETE">
            <button type="submit">Eliminar</button>
          </form>
        </div>
      <% }) %>
    </div>
  </main>
<script src="http://localhost:3000/Public/scripts/former.js"></script>
</body>
</html>
