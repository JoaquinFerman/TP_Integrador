<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Lista de Ventas</title>
  <link rel="stylesheet" href="/frontend/styles/styles-ejs-ventas.css">
</head>
<body>
  <nav class="navbar">
    <div class="marca">
      <img src="http://localhost:3000/images/logo.png" alt="Logo" class="logo">
      <span class="nombre">MatchPoint Wear</span>
    </div>
    <p>Panel de administrador</p>
    <div class="nombres">
      <p>Joaquin Ferman</p>
      <p>Matias Pena</p>
    </div>
    <a href="/api/admin/productos/todas">Productos</a>
    <a href="/api/admin/usuarios">Usuarios</a>
  </nav>

  <main class="container mt-4">
    <h1>ðŸ›’ Lista de Ventas</h1>
    <% if (sales && sales.length > 0) { %>
      <table class="sales-table">
        <thead>
          <tr>
            <th>Comprador</th>
            <th>Productos</th>
          </tr>
        </thead>
        <tbody>
          <% sales.forEach(function(sale) { %>
            <tr>
              <td><%= sale.name %></td>
              <td>
                <ul>
                  <% (sale.products || []).forEach(function(product) { %>
                    <li><%= product.name %> x<%= product.count%></li>
                  <% }); %>
                </ul>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <div class="no-sales">No se encontraron ventas.</div>
    <% } %>
  </main>
</body>
</html>