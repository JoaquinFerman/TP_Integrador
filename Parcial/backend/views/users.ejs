<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Gesti√≥n de usuarios</title>
  <link rel="stylesheet" href="http://localhost:3000/frontend/styles/styles-ejs-usuarios.css">
</head>
<body>
  <nav class="navbar">
    <div class="marca">
      <img src="http://localhost:3000/images/logo.png" alt="Logo" class="logo">
      <span class="nombre">MatchPoint Wear</span>
    </div>
    <p>Panel de administrador</p>
    <div class="nombres">
      <p>Joaquin Ferman</p>
      <p>Matias Pena</p>
    </div>
    <a href="/api/admin/productos/todas">Productos</a>
    <a href="/api/admin/ventas">Ventas</a>
  </nav>

  <main class="container mt-4">
    <h2>Agregar nuevo usuario</h2>
    <form action="/api/admin/usuarios" method="POST">
      <input type="text" name="nombre" placeholder="Nombre del usuario" required>
      <input type="text" name="password" placeholder="Password" required>
      <button type="submit">Agregar</button>
    </form>

    <hr>

    <h2>Lista de usuarios</h2>
    <div class="users-list">
      <% users.forEach(user => { %>
        <div class="product-card">
          <h3>Nombre: <%= user.name %></h3>
          <form action="/api/admin/usuarios/<%= user.id %>?_method=PUT" method="POST">
            <input type="text" name="name" value="<%= user.name %>" required>
            <button type="submit">Actualizar</button>
          </form>
          
          <form action="/api/admin/usuarios/<%= user.id %>?_method=DELETE" method="POST">
            <button type="submit">Eliminar</button>
          </form>
        </div>
      <% }) %>
    </div>
  </main>
</body>
</html>
